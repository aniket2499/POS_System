<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Add_items">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/ed_itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_editetext"
            android:drawablePadding="10dp"
            android:hint="Item name"
            android:padding="12dp"
            android:textColor="@color/colorGrey2"
            android:textColorHint="@color/colorGrey" />
        <EditText
            android:id="@+id/ed_itemprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_editetext"
            android:drawablePadding="10dp"
            android:hint="Item price"
            android:padding="12dp"
            android:textColor="@color/colorGrey2"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/ed_itemquantity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_editetext"
            android:drawablePadding="10dp"
            android:hint="Item quanitity"
            android:padding="12dp"
            android:textColor="@color/colorGrey2"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/ed_itemmunit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_editetext"
            android:drawablePadding="10dp"
            android:hint="measurement unit"
            android:padding="12dp"
            android:textColor="@color/colorGrey2"
            android:textColorHint="@color/colorGrey" />

        <EditText
            android:id="@+id/ed_itembarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_editetext"
            android:drawablePadding="10dp"
            android:hint="Item barcode number"
            android:padding="12dp"
            android:textColor="@color/colorGrey2"
            android:textColorHint="@color/colorGrey" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/btn_add"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_green2"
            android:gravity="center"
            android:text="add"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_green2"
            android:gravity="center"
            android:text="save"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="100dp"
            android:layout_height="103dp"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>