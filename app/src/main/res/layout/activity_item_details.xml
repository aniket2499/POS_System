<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.item_details">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/empty" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"

                        app:tabBackground="@drawable/tab_selector"
                        app:tabIndicatorHeight="0dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp">


                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/product_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="name : "
                                android:textColor="@color/colorBalck"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/txt_name"
                                android:layout_width="172dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_editetext"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@color/colorBalck"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="measurement unit :"
                                android:textColor="@color/colorBalck"
                                android:textSize="14dp"
                                android:textStyle="bold" />
                            <EditText
                            android:id="@+id/txt_munit"
                            android:layout_width="172dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text=""
                            android:background="@drawable/rounded_editetext"
                            android:textColor="@color/colorBalck"
                            android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="price(In Rs) :"
                                android:textColor="@color/colorBalck"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/txt_price"
                                android:layout_width="167dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:padding="2dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:background="@drawable/rounded_editetext"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="barcode Number :"
                                    android:textColor="@color/colorBalck"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />
                            <EditText
                                android:id="@+id/txt_barcode"
                                android:layout_width="167dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:padding="2dp"
                                android:text=""
                                android:background="@drawable/rounded_editetext"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="Quantity :"
                                    android:textColor="@color/colorBalck"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                            <EditText
                                android:id="@+id/txt_quantity"
                                android:layout_width="167dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:padding="2dp"
                                android:text=""
                                android:background="@drawable/rounded_editetext"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lvl_pricelist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical"
                                android:padding="5dp" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|bottom"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/btn_save"
                            android:layout_width="107dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rounded_green"
                            android:gravity="center"
                            android:text="save"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/btn_home"
                            android:layout_width="107dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rounded_green"
                            android:gravity="center"
                            android:text="home"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>